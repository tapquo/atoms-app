[data-atoms=app]
  [data-organism-article], [data-organism-aside]
    > [data-organism-header]
      > [data-atom-heading]
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
        display: block
        flex-grow: 2
        &:not(.left):not(.right)
          text-align: center
        &.left, &.right
          padding: 0 (U / 2)
        &.left
          text-align: left
        &.right
          text-align: right
