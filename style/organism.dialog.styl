[data-system=dialog]
  z-index: 1980
  left: 0
  width: 100%
  overflow: hidden

  &:not(.no-block)
    position: fixed
    top: 0
    height: 100%
    display-flex()
    justify-content center
    align-content center
    align-items center

  &.no-block
    position: absolute
    bottom: 0
    height: HEIGHT = (HEADER_HEIGHT / 1.05)
    line-height: HEIGHT
    &.expand
      height: HEIGHT + (1.125 * HEADER_HEIGHT)

  &:not(.active)
    visibility: hidden
  &.active
    visibility: visible

  > [data-organism-dialog]
    backface-visibility hidden
    transform translateZ(0)

  > [data-organism-dialog=loading]
    width: 100%
    height: 100%
    position: relative
    > .loading-animation
      position: absolute
      width: SIZE = (3.5 * UNIT)
      height: SIZE
      top: 50%
      left: 50%
      margin-left: -(SIZE / 2)
      margin-top: -(SIZE / 2)
      &::before, &::after
        width: SIZE
        height: SIZE

  > [data-organism-dialog=push]
    > header
      height: (HEADER_HEIGHT / 1.05)
      line-height: HEADER_HEIGHT
      display-flex()
      flex-direction row
      text-align: -webkit-match-parent
      > h1
        font-size: FONT_SIZE_SMALL
        font-weight: normal
      > figure, > .icon
        margin: (U / 2)
        height: SIZE = (2.2 * U)
        width: SIZE
        font-size: SIZE
        flex-shrink 0
      > figure
        background-size: cover

    > section
      height: HEADER_HEIGHT
      padding: (U / 2.5) (U / 1.5)
      > p
        flex-grow 2
        font-size: FONT_SIZE_TINY
        line-height: (FONT_SIZE_NORMAL * 1.1)
        overflow: hidden


  > :not([data-organism-dialog=loading]):not([data-organism-dialog=push])
    width: MODAL_WIDTH
    PAD = (1.5 * PADDING)
    display-flex()
    flex-direction column

    > [data-organism-header]
      order 1
      > [data-atom-heading]
        padding: 0 0 0 PAD
        font-size: FONT_SIZE_BIG
      > [data-molecule-navigation]
        padding: 0 PADDING 0 0
      > *
        display: inline-block
    > [data-molecule-navigation]
      order 2
    > [data-organism-section]
      order 3
      flex-grow 2
      padding: (.75 * PAD) PAD

    > [data-organism-footer]
      order 4
      padding: PADDING PAD

    &:not(.cancel):not(.accept):not(.warning)
      > [data-organism-header] + [data-organism-section]
        padding-top: 0

    &.side
      position: absolute
      height: inherit
      &:not(.right)
        left: 0px
      &.right
        right: 0px
